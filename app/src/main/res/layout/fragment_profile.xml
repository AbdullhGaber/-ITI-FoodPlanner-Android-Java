<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/cream_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="28sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/dark_charcoal"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btn_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Backup Data"
        android:padding="16dp"
        android:backgroundTint="@color/olive_green"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync your local data to the cloud."
        android:textColor="#808080"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_restore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restore Data"
        android:padding="16dp"
        android:backgroundTint="@color/orange"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download your data from the cloud."
        android:textColor="#808080"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/white"
        android:backgroundTint="#FF5252"/>

</LinearLayout>