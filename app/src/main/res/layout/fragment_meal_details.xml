<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creamy"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/iv_meal_image"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_meal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/circle_white_bg"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#2E2E2E"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_meal_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Spicy Arrabiata Pasta"
            android:textColor="#2E2E2E"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_meal_image" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#FCA950"
            android:src="@drawable/ic_heart_unfilled"
            app:tint="@android:color/white"
            app:borderWidth="0dp"
            app:elevation="4dp"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="@+id/tv_meal_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_meal_name" />

        <TextView
            android:id="@+id/tv_origin_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Origin : "
            android:textColor="#808080"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_meal_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_meal_name" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Italian "
            android:textColor="#505050"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_origin_label"
            app:layout_constraintStart_toEndOf="@+id/tv_origin_label"
            app:layout_constraintTop_toTopOf="@+id/tv_origin_label" />

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="@+id/tv_area"
            app:layout_constraintStart_toEndOf="@+id/tv_area"
            app:layout_constraintTop_toTopOf="@+id/tv_area" />

        <TextView
            android:id="@+id/tv_ingredients_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Ingredients"
            android:textColor="#2E2E2E"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/tv_meal_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_origin_label" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_ingredient"
            app:layout_constraintTop_toBottomOf="@+id/tv_ingredients_title" />

        <TextView
            android:id="@+id/tv_instructions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Instructions"
            android:textColor="#2E2E2E"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/tv_meal_name"
            app:layout_constraintTop_toBottomOf="@+id/rv_ingredients" />

        <TextView
            android:id="@+id/tv_instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="4dp"
            android:text="1. Bring a large pot of water to a boil.\n   Add kosher salt and the pasta. Cook for 9 minutes.\n2. In a large skillet, heat olive oil and sautÃ© garlic until fragrant.\n3. Add chopped tomatoes, red chile flakes, Italian seasoning, salt, and pepper. Simmer for 5 minutes.\n4. Drain pasta and add to the sauce.\n   Garnish with Parmigiano-Reggiano and basil."
            android:textColor="#505050"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_meal_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_instructions_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_instructions">

            <WebView
                android:id="@+id/wv_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_meal"
                android:alpha="0.8"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play"
                app:tint="@android:color/white"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>